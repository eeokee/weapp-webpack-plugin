{
  "name": "weapp-webpack-plugin",
  "version": "0.0.1",
  "description": "微信小程序 Webpack 插件",
  "scripts": {
    "start": "jest test --watch",
    "test": "jest test",
    "test:webpack": "cd test && webpack",
    "prebuild": "rimraf ./lib && mkdirp ./lib",
    "build:watch": "babel src -o lib/index.js -w",
    "build": "babel src -o lib/index.js",
    "preversion": "yarn test && yarn build"
  },
  "main": "lib/index.js",
  "files": [
    "lib",
    "*.md"
  ],
  "keywords": [
    "wxapp",
    "weapp",
    "webpack",
    "webpack-plugin",
    "plugin"
  ],
  "author": "cap32",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.24.0",
    "babel-core": "^6.24.0",
    "babel-eslint": "6.1",
    "babel-jest": "^19.0.0",
    "babel-loader": "^7.0.0-beta.1",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-stage-0": "^6.22.0",
    "eslint": "4.18",
    "eslint-plugin-babel": "3.2",
    "eslint-plugin-jest": "^19.0.1",
    "file-loader": "^0.11.1",
    "jest": "^19.0.2",
    "mkdirp": "^0.5.1",
    "rimraf": "^2.6.1",
    "webpack": "^2.3.2"
  },
  "dependencies": {
    "fs-promise": "^2.0.2",
    "globby": "^6.1.0",
    "lodash": "^4.17.4",
    "webpack-sources": "^0.2.3"
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "node_modules",
      "dist"
    ]
  }
}
